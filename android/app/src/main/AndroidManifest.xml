<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.openbmap"
    android:versionCode="27"
    android:versionName="0.8.18">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <application
        android:name=".ScannerApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat">
        <activity
            android:name=".activities.StartscreenActivity_"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name=".activities.tabs.TabHostActivity_"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat" />
        <activity
            android:name=".activities.details.WifiDetailsActivity_"
            android:label="@string/activity_wifi_details_activity" />
        <activity
            android:name=".activities.details.CellDetailsActivity_"
            android:label="@string/activity_cell_details" />
        <activity
            android:name=".activities.settings.SettingsActivity"
            android:label="@string/activity_settings_activity" />
        <activity
            android:name=".activities.settings.MapDownloadActivity"
            android:label="@string/activity_map_downloads_activity" />
        <activity
            android:name=".activities.settings.CatalogDownloadActivity"
            android:label="@string/activity_catalog_downloads_activity" />
        <activity
            android:name=".activities.settings.AdvancedSettingsActivity"
            android:label="@string/activity_advanced_settings_activity" />
        <activity
            android:name=".activities.CreditsActivity"
            android:label="@string/activity_credits_activity" />

        <!-- Permission Helper -->
        <activity android:name=".utils.PermissionRequestActivity" />

        <!-- Exported activities, which can be used to automate Radiobeacon -->

        <receiver android:name=".commands.CommandReceiver" android:enabled="true">
            <intent-filter>
                <action android:name="org.openbmap.command.START" />
                <action android:name="org.openbmap.command.STOP" />
                <action android:name="org.openbmap.command.UPLOAD" />
            </intent-filter>
        </receiver>

        <!-- Master service controlling all other services -->
        <service android:name=".services.ManagerService">
            <intent-filter>
                <action android:name=".intent.START_TRACKING" />
                <action android:name=".intent.STOP_TRACKING" />
            </intent-filter>
        </service>

        <!-- GPS receiver service -->
        <service
            android:name=".services.LocationService"
            android:exported="false">
            <intent-filter>
                <action android:name=".intent.GPS_SERVICE" />
            </intent-filter>
        </service>

        <!-- Cell logger service -->
        <service android:name=".services.CellScannerService" />
        <!-- Wifi logger service -->
        <service android:name=".services.WifiScannerService" />

        <!-- GPX logger service -->
        <service android:name=".services.GpxLoggerService" />

        <!-- POI manager service -->
        <service
            android:name=".services.PoiCatalogService"
            android:exported="false" />

        <provider
            android:name=".db.ContentProvider"
            android:authorities="org.openbmap.provider"
            android:exported="false" />
    </application>

</manifest>